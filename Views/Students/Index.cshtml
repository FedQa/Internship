@model IEnumerable<Internship.Models.Student>

@{
    Layout = "_LayoutAdmin";
}

<h1>Список студентов</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Добавить нового студента</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    <a asp-action="Index" asp-route-sortOrder="name_asc" asp-route-currentFilter="@ViewData["CurrentFilter"]">Имя</a>
                </th>
                <th scope="col">
                    <a asp-action="Index" asp-route-sortOrder="surname_asc" asp-route-currentFilter="@ViewData["CurrentFilter"]">Фамилия</a>
                </th>
                <th scope="col">
                    <a asp-action="Index" asp-route-sortOrder="patronymic_asc" asp-route-currentFilter="@ViewData["CurrentFilter"]">Отчество</a>
                </th>
                <th scope="col">
                    <a asp-action="Index" asp-route-sortOrder="groupId_asc" asp-route-currentFilter="@ViewData["CurrentFilter"]">Группа</a>
                </th>
                <th scope="col">
                    <a asp-action="Index" asp-route-sortOrder="gpa_asc" asp-route-currentFilter="@ViewData["CurrentFilter"]">Средний балл</a>
                </th>
                <th scope="col">Ссылка на резюме</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Surname)</td>
                    <td>@Html.DisplayFor(modelItem => item.Patronymic)</td>
                    <td>@Html.DisplayFor(modelItem => item.GroupId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Gpa)</td>
                    <td>@Html.DisplayFor(modelItem => item.ResumeLink)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdStudent">Изменить</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdStudent">Подробности</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdStudent">Удалить</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
