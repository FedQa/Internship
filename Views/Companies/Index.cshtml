@model IEnumerable<Internship.Models.Company>

@{
    Layout = "_LayoutAdmin";
}

<h1>Компании</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Создать новую</a>
</p>
<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    Название
                </th>
                <th>
                    Описание компании
                </th>
                <th>
                    Адрес офиса
                </th>
                <th>
                    Количество мест
                </th>
                <th>
                    Действия
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvailableSeats)
                    </td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-info me-2" asp-action="Edit" asp-route-id="@item.IdCompany">Изменить</a>
                            <a class="btn btn-primary me-2" asp-action="Details" asp-route-id="@item.IdCompany">Подробности</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdCompany">Удалить</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>